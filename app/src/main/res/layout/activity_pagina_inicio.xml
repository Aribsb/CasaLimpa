<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="casalimpa.projeto.com.casalimpa.PaginaInicioActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tela_inicial"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_height="match_parent"
        android:text="@string/cadastre_se"
        android:textSize="@dimen/tamanhoTitulosFormulario"
        android:gravity="left|bottom"
        android:textColor="@color/corLetrasBrancas"
        android:onClick="telaCadastreSe"
        />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/login"
        android:textSize="@dimen/tamanhoTitulosFormulario"
        android:gravity="right|bottom"
        android:textColor="@color/corLetrasBrancas"
        android:onClick="telaLogin"
        />
</LinearLayout>




</android.support.constraint.ConstraintLayout>
