<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="casalimpa.projeto.com.casalimpa.AdicionarNovoServicoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoria do serviço prestado"
                    android:textColor="@color/corLetrasGeral"
                    android:textSize="@dimen/tamanhoTextoGeral" />

        <!-- Falta criar o ExpandableListView vou pequisar -->

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Prazo para Atendimento"
                            android:inputType="time"
                            android:textColor="@color/corLetrasGeral" />



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Preço sugerido"
                            android:inputType="numberDecimal"
                            android:textColor="@color/corLetrasGeral" />



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Observações Importantes"
                            android:inputType="textLongMessage"
                            android:textColor="@color/corLetrasGeral" />



                        <Button
                            android:id="@+id/botaoSalvar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/salvar"
                            android:textColor="@color/corLetrasGeral"
                            android:textSize="@dimen/tamanhoTextoBotoes"
                            android:onClick="salvarServico"/>

                        <Button
                            android:id="@+id/botaoCancelar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cancelar"
                            android:textColor="@color/corLetrasGeral"
                            android:textSize="@dimen/tamanhoTextoBotoes"
                            android:onClick="cancelarCadastroServico"/>


    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
