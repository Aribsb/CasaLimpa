<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="casalimpa.projeto.com.casalimpa.PainelDeControleActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_dialog_email"
                android:onClick="meusServicosBotao" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="contratarServicosBotao"
                android:src="@android:drawable/ic_menu_add"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="servicosPrestadosBotao"
                android:src="@android:drawable/ic_menu_manage"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="avaliacoesBotao"
                android:src="@android:drawable/star_big_off" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="meuperfilBotao"
                android:src="@android:drawable/ic_menu_myplaces"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="sairBotao"
                android:src="@android:drawable/btn_dialog"/>
        </LinearLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
